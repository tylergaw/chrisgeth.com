<% provide :body_class, "page-news" %>
<h1 class="page-title title-character <%= title_char_class %>">Whatâ€™s Happening?</h1>

<div class="page--content">
  <ul class="list--posts">
    <%= render(:partial => 'news/post', :collection => @posts) || render(:partial => 'news/no_news') %>
  </ul>

  <% if @prev_page or @next_page %>
  <div class="pagination">
    <% if @next_page %>
    <%= link_to "Older", news_path(page: @next_page), :class => "button" %>
    <% end %>
    
    <% if @prev_page %>
    <%= link_to "Newer", news_path(page: @prev_page), :class => "button" %>
    <% end %>
  </div>
  <% end %>
</div>
